{
  "name": "straylight",
  "version": "0.1.6",
  "description": "HTML templating and update engine",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenparsing/straylight.git"
  },
  "homepage": "https://github.com/zenparsing/straylight",
  "dependencies": {
    "htmltag": "^0.1.12",
    "symbol-observable": "^1.0.4",
    "zen-observable": "^0.6.0",
    "zen-push": "^0.1.4"
  },
  "devDependencies": {
    "esdown": "^1.2.5",
    "eslint": "^4.2.0"
  },
  "scripts": {
    "test": "eslint src/*.js src/*/*.js test/*.js && esdown test/index.js",
    "pack": "esdown - src/index.js dist/index.js -b",
    "pack-global": "esdown - src/index.js dist/straylight.js -b --deep -g Straylight",
    "prepublishOnly": "npm run pack && npm run pack-global"
  }
}
